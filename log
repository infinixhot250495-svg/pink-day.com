  <script>
    // Modal custom
    const showCustomModal = (title, text, type = 'warning', isLoading = false) => {
      const modalId = 'customModal';
      let modal = document.getElementById(modalId);

      if (!modal) {
        modal = document.createElement('div');
        modal.id = modalId;
        modal.className = 'fixed inset-0 bg-primary bg-opacity-70 flex items-center justify-center z-50';
        document.body.appendChild(modal);
      }

      let iconHtml = '';
      let titleColorClass = 'text-dark';
      let buttonHtml = `<button id="modal-ok-button" class="bg-primary text-light px-4 py-2 rounded-full hover:opacity-90 transition font-button">Saya Mengerti</button>`;

      if (isLoading) {
        iconHtml = `<div class="animate-spin rounded-full h-8 w-8 border-b-2 border-primary mb-3"></div>`;
        buttonHtml = '';
        modal.style.pointerEvents = 'none';
      } else {
        if (type === 'success') {
          iconHtml = '<i class="fas fa-check-circle text-primary text-3xl mb-3"></i>';
          titleColorClass = 'text-primary';
        } else if (type === 'error') {
          iconHtml = '<i class="fas fa-times-circle text-secondary text-3xl mb-3"></i>';
          titleColorClass = 'text-secondary';
        } else {
          iconHtml = '<i class="fas fa-exclamation-triangle text-primary text-3xl mb-3"></i>';
          titleColorClass = 'text-primary';
        }
        modal.style.pointerEvents = 'auto';
      }

      modal.innerHTML = `
        <div class="bg-light p-6 rounded-lg shadow-xl max-w-sm w-full text-center border border-primary">
          ${iconHtml}
          <h3 class="text-lg font-bold ${titleColorClass} mb-3 font-heading">${title}</h3>
          <p class="text-light mb-4">${text}</p>
          ${buttonHtml}
        </div>
      `;

      const closeButton = document.getElementById('modal-ok-button');
      if (closeButton) {
        closeButton.addEventListener('click', () => {
          document.body.removeChild(modal);
        });
      }
    };

    // Validasi form
    document.addEventListener('DOMContentLoaded', function () {
      const loginForm = document.getElementById("loginForm");
      const agreementCheckbox = document.getElementById("agreement");

      if (loginForm && agreementCheckbox) {
        loginForm.addEventListener("submit", function (e) {
          e.preventDefault();

          if (!agreementCheckbox.checked) {
            showCustomModal('Oops...', 'Anda harus menyetujui Syarat & Ketentuan serta Kebijakan Privasi terlebih dahulu!', 'error');
            return;
          }

          // Loading modal
          showCustomModal('Memproses...', 'Mohon tunggu sebentar', 'loading', true);

          setTimeout(() => {
            loginForm.submit();
          }, 1500);
        });
      }
    });

    // Toggle password
    function togglePasswordVisibility() {
      const passwordInput = document.getElementById('password');
      const eyeIcon = document.getElementById('eye-icon');
      if (passwordInput && eyeIcon) {
        if (passwordInput.type === "password") {
          passwordInput.type = "text";
          eyeIcon.classList.remove('fa-eye-slash');
          eyeIcon.classList.add('fa-eye');
        } else {
          passwordInput.type = "password";
          eyeIcon.classList.remove('fa-eye');
          eyeIcon.classList.add('fa-eye-slash');
        }
      }
    }
  </script>

